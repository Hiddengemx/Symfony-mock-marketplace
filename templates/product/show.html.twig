{% extends 'base.html.twig' %}

{% block body %}

<h1>Product â„–{{ product.id }}</h1>

<table>
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price ($)</th>
            <td>{{ product.price }}</td>
        </tr>
    </tbody>
</table>

{% if is_granted('ROLE_SELLER') %}

<a href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>

<a href="{{ path('product_delete', {'id': product.id}) }}">Delete</a>

{% endif %}

{% if is_granted('ROLE_USER') and not is_granted('ROLE_SELLER') %}
    <button>Buy</button>
{% endif %}

<a href="/products">Back</a>

{% endblock %}